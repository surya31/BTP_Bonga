- user = typeof(user) != 'undefined' ? user : {}
doctype html
html(lang='en')
head
  meta(charset='utf-8')
  title CL4P-TP "Claptrap" Online Store and Recommendation Engine
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(name='description', content='CSC322 Project')
  meta(name='author', content='CCNY')

  link(href='/css/bootstrap.css', rel='stylesheet')
  link(href='/css/docs.css', rel='stylesheet')
  link(href='/css/google-bootstrap.css', rel='stylesheet')
  link(href='/css/custom.css', rel='stylesheet')
  link(href='/css/jquery.meow.css', rel='stylesheet')
  link(href='/css/original.css', rel='stylesheet')
  link(href='/css/jquery-ui.css', rel='stylesheet')
  link(href='/css/jquery.ui.theme.css', rel='stylesheet')
  link(href='/css/jquery.tagit.css', rel='stylesheet')

  script(src='/js/jquery-1.8.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/jquery.validate.js')
  script(src='/js/jquery.raty.min.js')
  script(src='/js/jquery.meow.js')
  script(src='/js/humane.js')
  script(src='/js/jquery-ui.js')
  script(src='/js/tag-it.js')

body
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        a.brand(href="/") CL4P-TP
        button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .nav-collapse.collapse
          ul.nav
            li
              a(href='/') Home
            li
              a(href='/games') Games
          ul.nav.pull-right
            if (!user.email)
              li
                a(href='/login') Sign In
              li
                a(href='/register') Create Account
              li
            else
              if user.isAdmin
                li
                  a(href='/admin') Admin Dashboard
              li
                a(href='/#{user.userName}')
                  if user.gamertag
                    img.img-rounded(id='tiny-avatar', src='http://avatar.xboxlive.com/avatar/' + user.gamertag + '/avatarpic-s.png')
                  else
                    img.img-rounded(id='tiny-avatar', src='/img/anonymous_avatar.gif', height='32', width='32')
                  span &nbsp;&nbsp;
                  = user.firstName
                  |&nbsp;
                  = user.lastName
              li
                a(href='/account') My Account
              li
                a(href='/logout') Sign Out

  header#overview.jumbotron.subhead
    .container
      h1= heading
        p.lead= lead
        if typeof frontpage != 'undefined'
          p.lead
            a(href='/login') Login
            | /
            a(href='/register')  Signup

  .container
    block content

  footer.footer
    .container
      p
        | Powered by
        strong  Node.js
        | ,
        strong  MongoDB
        |  and
        strong  Redis
        | .
        br
        | Designed and developed by 420
        br
       // | Special thanks goes to people who have contributed to this project: Yang B., Kevin G. and Mario L.
      p
        | Star rating plugin from&nbsp;
        a(href='https://github.com/wbotelhos/raty') jQuery Raty
        | . Google-style CSS3 buttons by&nbsp;
        a(href='http://blog.timodonnell.com/css3-google-buttons/') Google Bootstrap
        | .
  script(src='/js/custom.js')
